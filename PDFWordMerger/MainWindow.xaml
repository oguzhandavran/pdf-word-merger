<Window x:Class="PDFWordMerger.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="PDF &amp; Word Document Merger" Height="700" Width="1100"
        AllowDrop="True"
        Drop="Window_Drop"
        DragOver="Window_DragOver">
    
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <!-- Top Section - Add Files Button and Drag-Drop Zone -->
        <StackPanel Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal" Margin="0,0,0,10">
            <Button Content="Add Files" Command="{Binding AddFilesCommand}" Width="120" Height="35" FontWeight="Bold"/>
            <Border BorderBrush="#4A90E2" BorderThickness="2" CornerRadius="5" Padding="20,5" Margin="20,0,0,0" Background="#F0F8FF">
                <TextBlock Text="Drag and drop PDF or Word files here" VerticalAlignment="Center" Foreground="#4A90E2" FontStyle="Italic"/>
            </Border>
        </StackPanel>

        <!-- Left Section - File List with Reorder Controls -->
        <Grid Grid.Row="1" Grid.Column="0" Margin="0,0,10,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Text="Selected Files:" FontWeight="Bold" FontSize="14" Margin="5,0,0,5"/>
            
            <ListBox Grid.Row="1" 
                     ItemsSource="{Binding DocumentFiles}" 
                     SelectedItem="{Binding SelectedDocument}"
                     ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid Margin="5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="30"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBlock Grid.Column="0" 
                                       Text="{Binding FileTypeIcon}" 
                                       FontSize="20" 
                                       VerticalAlignment="Center"
                                       ToolTip="{Binding FileType}"/>
                            
                            <StackPanel Grid.Column="1" Margin="5,0">
                                <TextBlock Text="{Binding FileName}" FontWeight="Bold" TextWrapping="Wrap"/>
                                <TextBlock Text="{Binding FilePath}" FontSize="10" Foreground="Gray" TextWrapping="Wrap"/>
                                <TextBlock FontSize="10" Foreground="#4A90E2">
                                    <Run Text="Pages: "/>
                                    <Run Text="{Binding PageCount, Mode=OneWay}"/>
                                    <Run Text=" | Modified: "/>
                                    <Run Text="{Binding ModifiedDate, StringFormat='yyyy-MM-dd HH:mm'}"/>
                                </TextBlock>
                            </StackPanel>

                            <TextBlock Grid.Column="2" 
                                       Text="{Binding Order}" 
                                       FontSize="18" 
                                       FontWeight="Bold" 
                                       Foreground="#4A90E2"
                                       VerticalAlignment="Center"
                                       Margin="10,0"/>
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                <Button Content="â†‘ Move Up" Command="{Binding MoveUpCommand}" Width="100"/>
                <Button Content="â†“ Move Down" Command="{Binding MoveDownCommand}" Width="100"/>
                <Button Content="ðŸ—‘ Delete" Command="{Binding DeleteFileCommand}" Width="100" Background="#FF6B6B" Foreground="White"/>
            </StackPanel>
        </Grid>

        <!-- Right Section - Preview Panel -->
        <Grid Grid.Row="1" Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Text="Merge Preview:" FontWeight="Bold" FontSize="14" Margin="5,0,0,5"/>
            
            <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="5">
                <Button Content="ðŸ“… Auto-Sort by Date" Command="{Binding AutoSortCommand}" Width="160" Background="#4CAF50" Foreground="White"/>
                <Button Content="ðŸ”¤ Auto-Sort by Name" Command="{Binding AutoSortByNameCommand}" Width="160" Background="#2196F3" Foreground="White"/>
            </StackPanel>

            <Border Grid.Row="2" BorderBrush="#CCCCCC" BorderThickness="1" CornerRadius="5" Padding="10" Margin="5" Background="#FAFAFA">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <ItemsControl ItemsSource="{Binding DocumentFiles}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="#E0E0E0" BorderThickness="0,0,0,1" Padding="5" Margin="0,2">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="40"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Grid.Column="0" 
                                                   Text="{Binding Order}" 
                                                   FontWeight="Bold" 
                                                   FontSize="16"
                                                   Foreground="#4A90E2"
                                                   VerticalAlignment="Center"/>

                                        <StackPanel Grid.Column="1">
                                            <TextBlock Text="{Binding FileName}" FontWeight="Bold"/>
                                            <TextBlock Text="{Binding FileType}" FontSize="10" Foreground="Gray"/>
                                        </StackPanel>

                                        <TextBlock Grid.Column="2" 
                                                   VerticalAlignment="Center" 
                                                   Margin="10,0"
                                                   Foreground="#4A90E2">
                                            <Run Text="{Binding PageCount, Mode=OneWay}"/>
                                            <Run Text=" pages"/>
                                        </TextBlock>

                                        <TextBlock Grid.Column="3" 
                                                   Text="{Binding FileTypeIcon}" 
                                                   FontSize="24"
                                                   VerticalAlignment="Center"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Border>
        </Grid>

        <!-- Bottom Section - Merge Summary -->
        <Border Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" 
                BorderBrush="#4A90E2" BorderThickness="2" CornerRadius="5" 
                Padding="10" Margin="0,10,0,10" Background="#E3F2FD">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Total Documents: " FontWeight="Bold"/>
                <TextBlock Text="{Binding TotalDocuments}" Margin="0,0,20,0" Foreground="#4A90E2" FontWeight="Bold"/>
                <TextBlock Text="Total Pages: " FontWeight="Bold"/>
                <TextBlock Text="{Binding TotalPages}" Margin="0,0,20,0" Foreground="#4A90E2" FontWeight="Bold"/>
                <TextBlock Text="Output: Single merged PDF with sequential page numbering" FontStyle="Italic" Foreground="#666"/>
            </StackPanel>
        </Border>

        <!-- Bottom Section - Action Buttons -->
        <StackPanel Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="ðŸ“„ Preview Merge" Command="{Binding PreviewMergeCommand}" Width="150" Height="40" FontSize="14"/>
            <Button Content="ðŸ’¾ Export to PDF" Command="{Binding ExportToPdfCommand}" Width="150" Height="40" FontSize="14" Background="#4CAF50" Foreground="White" FontWeight="Bold"/>
        </StackPanel>

        <!-- Status Bar -->
        <Border Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" 
                Background="#F5F5F5" 
                BorderBrush="#CCCCCC" 
                BorderThickness="0,1,0,0" 
                Padding="10,5"
                Margin="0,10,0,0">
            <Grid>
                <TextBlock Text="{Binding StatusMessage}" VerticalAlignment="Center"/>
                <ProgressBar Value="{Binding ProgressValue}" 
                             Maximum="100" 
                             Height="20" 
                             Width="200"
                             HorizontalAlignment="Right"
                             Visibility="{Binding IsProcessing, Converter={StaticResource BoolToVisibilityConverter}}"/>
            </Grid>
        </Border>
    </Grid>
</Window>
